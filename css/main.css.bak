body {
  margin: 0;
  font-family: 'Open Sans', sans-serif;
  font-size: 18px;
}
h1, h2, h3, nav {
  font-family: 'Lato', sans-serif;
}
a {
  text-decoration: none;
  color: inherit;
  transition: .3s;
}
ul {
  list-style: none;
}

figcaption a {
  border: 1px solid #1e90ff;
  border-radius: 3px;
  color: #1e90ff;
  padding: 10px 30px;
  transition: .3s;
}
figcaption a:hover {
  color: #ffffff;
  background: #1e90ff;
}
.content-wrapper {
  width: 90%;
  margin: 0;
}
/*** HEADER STYLES ***/
header {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-flow: row wrap;
  background-color: #1e90ff;
  color: #ffffff;
}
header h1, nav {
  font-size: 24px;
  font-weight: 300
}
nav {
  display: flex;
  align-items: center;
  justify-content: center;
}
nav ul {
  display: flex;
  align-items: center;
}
nav ul li {
}
nav ul li a:hover {
  color: #000000;
}
#jumbotron {
  margin-left: 30px;
  padding-top: 50px;
  font-size: 80px;
}
#jumbotron span {
  color: #000000;
}
#hero {
  background-image: url('../img/robot-costume.jpg');
  height: 100vh;
  background-size: cover;
  background-position: bottom left;
}
/*** WORK SECTION ***/
.subhead {
  color: #1e90ff;
  font-size: 40px;
  margin: 10px 10px 10px 30px;
  text-transform: lowercase;
}
.veil {
  box-sizing: border-box;
  width: 45%;
  position: relative;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: 30px;
  padding: 0;
  background: #1e90ff;
  float: left;
  transition: .3s;
}
.veil img {
  border: 1px solid #000000;
  width: 100%;
  transition: .3s;
}
.veil:hover img {
  border: 1px solid #1e90ff;
  opacity: .3;
}
.veil:hover .img-description {
  opacity: 1;
}
.img-description {
  position: absolute;
  bottom: 30px;
  left: 30px;
  color: #ffffff;
  opacity: 0;
  transition: .3s;
}
.img-description h3, .img-description p {
  margin-bottom: 0;
  padding: 0;
}
.img-description a:hover {
  color: inherit;
}
/*** ABOUT SECTION ***/
#about {
  background: #f6faff;
}
#about a:hover {
  color: #1e90ff;
}
#ryan {
  width: 33.33%;
  border-radius: 50%;
}
/*** FOOTER STYLES ***/
footer div {
  text-align: center;
}
#contact a:hover {
  color: #1e99ff;
}
.social-badge {
  width: 40px;
  height: auto;
  padding: 10px;
  display: inline;
}
#copyright {
  background: #1e90ff;
}
#copyright a:hover {
  color: #ffffff;
}
